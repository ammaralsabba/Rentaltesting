<odoo>
  <data>

    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="sale_custom.sale">
      <field name="name">new.field.sale</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>	
      <field name="arch" type="xml">
        <field name="partner_id" position="after">
           <field name="phone_no"/>		          
        </field> 
        <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="before">		 
            <field name="serial_no" string="Sl No" readonly="1"/>
        </xpath>     
      </field>
    </record>

    <!--searching functionality-->
    <record id="view_presale_filter" model="ir.ui.view">
        <field name="name">presale.search</field>
        <field name="model">presale.presale</field>
        <field name="arch" type="xml">
            <search string="Search Presale">
                <field name="presale_name"/> 
                <field name="customer_id" />
                <field name="id"/>
            </search>
        </field>
    </record>
 
  </data>
</odoo>
